
extends ../layouts/main-layouts.pug
block styles 
      link(rel="stylesheet" href="/css/forms.css")

block content 
                              form(action="/admin/products" method="POST")

                                    input(type="hidden" name="id" value=`${product.id}`)

                                    div.form-group.row.mt-2
                                          label(for="name").col-sm-2.col-form-label Product Name
                                          div.col-sm-10
                                                input.form-control#name(type="text"  name="name" value=`${product.name}`)

                                    div.form-group.row.mt-2
                                          label(for="price").col-sm-2.col-form-label Price
                                          div.col-sm-10
                                                input.form-control#price(type="text"  name="price" value=`${product.price}`)

                                    div.form-group.row.mt-2
                                          label(for="imageUrl").col-sm-2.col-form-label Image
                                          div.col-sm-10
                                                input.form-control#image(type="text"  name="imageUrl" value=`${product.imageUrl}`)   
                                    
                                    div.form-group.row.mt-2
                                          label(for="categoryid").col-sm-2.col-form-label Category
                                          div.col-sm-10
                                                select.form-control#categoryid(name="categoryid")
                                                      option(value="-1") Select Category
                                                      each category in categories
                                                            option(value=`${category.categoryid}` selected=category.categoryid===product.categoryid) #{category.name}

                                    div.form-group.row.mt-2
                                          label(for="description").col-sm-2.col-form-label Description
                                          div.col-sm-10
                                                textarea.form-control#description(name="description" cols="30" rows="10") #{product.description}
                                    
                                    div.form-group.row.mt-2
                                          div.col-sm-10.offset-sm-2
                                                input(type="submit").btn.btn-primary(value="Save Product")