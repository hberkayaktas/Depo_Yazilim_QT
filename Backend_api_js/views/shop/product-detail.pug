extends ../layouts/main-layouts.pug

block content 
      .row 

      div.row
            div.col-lg-3
                  img(src=`/img/${product.imageUrl}` alt=`${product.description}`).card-img-top
      
            div.col-lg-9
                  h1 #{product.name}
                  hr
                  a(href="").btn.btn-link.p-0.mb-3 Arabica Kahve 
                  .mb-3
                        h4.text-primary.mb-3 #{product.price} TL
                        button(type="submit").btn.btn-primary.btn-lg Add to Cart

      .row
            .col-md-12 
                  hr
                  p.p-3 #{product.description}